# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

set $mode_system System: (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.config/i3/i3exit lock, mode "default"
    bindsym e exec --no-startup-id ~/.config/i3/i3exit logout, mode "default"
    bindsym s exec --no-startup-id ~/.config/i3/i3exit suspend, mode "default"
    bindsym h exec --no-startup-id ~/.config/i3/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.config/i3/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id ~/.config/i3/i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Home mode "$mode_system"

set $mode_display Display: work (w), home (h), laptop (l), other (a)
mode "$mode_display" {
    bindsym w exec --no-startup-id ~/.screenlayout/work.sh, mode "default"
    bindsym h exec --no-startup-id ~/.screenlayout/home.sh, mode "default"
    bindsym l exec --no-startup-id ~/.screenlayout/default.sh, mode "default"
    bindsym a exec --no-startup-id arandr, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Ctrl+d mode "$mode_display"

set $mode_virtualbox WindowsVM: start (s),stop (x), snapshot (y), attach headset (h), detach headset (Shift+h), headset status (Ctrl+h)
mode "$mode_virtualbox" {
    bindsym s exec --no-startup-id VBoxManage startvm "Windows10" --type gui, mode "default"
    bindsym x exec --no-startup-id VBoxManage controlvm "Windows10" savestate, mode "default"
    bindsym y exec --no-startup-id VBoxManage snapshot "Windows10" take $(date|tr ' ' '_') , mode "default"
    bindsym h exec --no-startup-id VBoxManage controlvm "Windows10" usbattach $(VBoxManage list usbhost|grep -m 1 -B 7 "Plantronics C320-M"|grep UUID|awk '{print $2}'), mode "default"
    bindsym Shift+h exec --no-startup-id VBoxManage controlvm "Windows10" usbdetach $(VBoxManage list usbhost|grep -m 1 -B 7 "Plantronics C320-M"|grep UUID|awk '{print $2}'), mode "default"
    bindsym Ctrl+h exec --no-startup-id "notify-send -u critical \\"Headset Status\\" \\"$(VBoxManage showvminfo Windows10|grep -C 10 'Plantronics C320-M'|sed -n '/Currently Attached USB Devices/,/Bandwidth groups/p')\\"",mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Ctrl+v mode "$mode_virtualbox"


